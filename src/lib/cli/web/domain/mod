#!/bin/bash

nopanel_web_domain_mod() {
    if [[ "$param_help" ]]; then
        nopanel web help
        return
    fi

    if [[ ! "$param_user" ]]; then
        nplib_command_output 'error' 'Username not specified (--user)'
        return
    fi
    if [[ ! "$param_domain" ]]; then
        nplib_command_output 'error' 'Domain name not specified'
        return
    fi

    nplib_require $NOPANEL_LIB/domain.inc

    if ! nplib_domains_exists "$param_domain"; then
        nplib_command_output 'error' 'Domain does not exist'
        return
    fi

    # Update noPanel DB
    nplib_command_echo "Modifying $param_domain..."

    nplib_domains_set "$param_domain" 'web' 'true'
    [[ $param_aliases ]] && nplib_domains_set "$param_domain" 'web_aliases' "$param_aliases"
    [[ $param_php ]] && nplib_domains_set "$param_domain" 'web_php' "$param_php"

    # Build configuration for domain
    nopanel web domain commit

    # Resload web server config
    nopanel module apache reload

    nplib_command_output 'ok' 'Domain modified'
}
