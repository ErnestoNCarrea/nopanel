#!/bin/bash

nopanel_web_domain_list() {
    if [[ "$param_help" ]]; then
        nopanel web help
        return
    fi

    if [[ ! "$param_user" ]]; then
        nopanel_command_return 'error' 'Username not specified (--user)'
        return
    fi

    source $NOPANEL_LIB/domain.inc

    if [[ "$param_output_json" ]]; then
        local domainlist=$(nplib_domain_get_json)
        nopanel_command_return 'ok' 'Domain list' "$domainlist"
    else
        local domainlist=$(nplib_domain_get)
        nopanel_command_return 'ok' 'Domain list' "$domainlist"
    fi

}
